pipeline {
  agent any
  stages {
    stage ('Installing (wxnefw)') {
      steps {
        sh script: 'npm install', label: 'r7qc4l'
      } //end steps
    } // end stage Installing
    stage ('Testing (g20iik)') {
      steps {
        sh script: 'ng test --browsers ChromeHeadless --code-coverage true --preserve-symlinks false --source-map true --watch false', label: 'ii8non'
      } //end steps
    } // end stage Testing
    stage ('Building (1fq5gs)') {
      steps {
        sh script: 'ng build  --aot false --build-optimizer false --common-chunk true --cross-origin none --delete-output-path true --extract-css false --extract-licenses false --fork-type-checker true --named-chunks true --output-hashing none --preserve-symlinks false --prod true --service-worker false --source-map true --stats-json false --subresource-integrity false --vendor-chunk true', label: 'i0f2h3'
      } //end steps
    } // end stage Building
    stage ('Deploy (cr5j7m)') {
      steps {
        script {
		docker.withTool('docker'){

        
            sh script: '''
docker build -t artifactory.dagility.com/docker/terraform-swathy1-frontend2:latest .
''', label: 'acccbc'
            sh script: '''
docker push artifactory.dagility.com/docker/terraform-swathy1-frontend2:latest
''', label: 'ccafda'
        		}
	}
script { sh script: 'sleep 0.005', label: '1t2w2u'}

        sh script: 'helm package chart', label: 'yrl20w'
        withCredentials([usernamePassword(credentialsId: '', passwordVariable: 'PASS', usernameVariable: 'USER')]) {

        script {
            sh script: '''
curl -u$USER:$PASS -T terraform-swathy1-frontend2-chart-0.1.0.tgz 'https://artifactory.dagility.com/artifactory/helm-local/terraform-swathy1-frontend2-chart-0.1.0.tgz' 
''', label: 'cecffa'
        } // end step group script
script { sh script: 'sleep 0.005', label: 'icoxs7'}
} // end step group
        sh script: 'helm repo add terraform-swathy1-frontend2 https://artifactory.dagility.com/artifactory/helm ', label: 'v8rljh'
        sh script: 'helm repo update', label: 'xkb2da'
        sh script: 'helm upgrade terraform-swathy1-frontend2-deployment terraform-swathy1-frontend2/terraform-swathy1-frontend2-chart --install --values chart-values.yaml --namespace argocd --set ingress.hosts[0].host=${project.prefix?lower_case}-${component.code}-${project.environment?lower_case}.${project.properties.domain}', label: 'j0myop'
      } //end steps
    } // end stage Deploy
  }
}
